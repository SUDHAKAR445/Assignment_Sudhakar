package calculator;

import java.math.BigInteger;
import java.util.Scanner;

public class DemoCalculator {
	public static void main(String[] args)
	{
		Scanner sc = new Scanner(System.in);
		Calculator cal = new CalculatorImplement();
		BigInteger a = new BigInteger("0");
		BigInteger b = new BigInteger("0");
		int choice = 0;
		System.out.println("Calculator");
		while(choice!=5)
		{
			System.out.println("0.Continue \n1.Addition \n2.Subtraction \n3.Multiplication \n4.Division \n5.Exit");
			System.out.print("Enter Your Choice : ");
			choice = sc.nextInt();
			switch(choice)
			{
				case 0:
				{
					break;
				}
				case 1:
				{
					System.out.println("Enter value1 : ");
					a = sc.nextBigInteger();
					System.out.println("Enter value2 : ");
					b = sc.nextBigInteger();
					System.out.println("Addition of "+a+" and "+b+" is "+ cal.add(a, b));
					break;
				}
				case 2:
				{
					System.out.println("Enter value1 : ");
					a = sc.nextBigInteger();
					System.out.println("Enter value2 : ");
					b = sc.nextBigInteger();
					System.out.println("Subtraction of "+a+" and "+b+" is "+ cal.subtract(a, b));
					break;
				}
				case 3:
				{
					System.out.println("Enter value1 : ");
					a = sc.nextBigInteger();
					System.out.println("Enter value2 : ");
					b = sc.nextBigInteger();
					System.out.println("Multiplication of "+a+" and "+b+" is "+ cal.multiply(a, b));
					break;
				}
				case 4:
				{
					System.out.println("Enter value1 : ");
					a = sc.nextBigInteger();
					System.out.println("Enter value2 : ");
					b = sc.nextBigInteger();
					System.out.println("Division of "+a+" and "+b+" is "+ cal.division(a, b));
					break;
				}
				case 5:
				{
					break;
				}
				default:
				{
					System.out.println("Enter the valid choice");
				}
			}
		}
		System.out.println("Calculation is finished");
	}
}
