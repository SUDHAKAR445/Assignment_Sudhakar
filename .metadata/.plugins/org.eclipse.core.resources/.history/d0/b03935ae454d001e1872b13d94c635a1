package com.blackJackGame;
import java.util.*;
public class Deck 
{
	private ArrayList<Card> deck;// deck will be used to manage an Cards(ArrayList)
	public Deck()
	{
		deck = new ArrayList<Card>();
	}
	
	// Adding card to the deck
	public void addCard(Card card)
	{
		deck.add(card);
	}
	
	public String toString()
	{
		String output = "";
		
		for(Card card : deck)
		{
			output += card;
			output +="\n";
		}
		return output;
	}
}
